<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:foregroundGravity="center">

    <LinearLayout
        android:id="@+id/usersContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="80dp">

        <LinearLayout
            android:id="@+id/recent_no_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_verysoft"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:visibility="gone">

            <com.android.instaprofilegrabber.RTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/thm_color_verywarm"
                android:text="اینجا محل نمایش آخرین تصاویر پروفایل مشاهده شده توسط شما است."/>

            <com.android.instaprofilegrabber.RTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/thm_color_verywarm"
                android:text="شما تاکنون تصویر پروفایل هیچ کاربری را مشاهده نکرده اید!"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>